$cameraPadding = 30px
$bootstrapSidePadding = 15px
.camera
  padding-top $cameraPadding
  .cameraThumbnail
    width 100%
    height 100%
    cursor pointer

  .cameraImage
    width 100%
    height 100%

  .cameraControls
    width 100%
    height 100%
    position absolute
    top 0
    left $bootstrapSidePadding
    padding-top $cameraPadding

  .left:hover, .right:hover, .top:hover, .bottom:hover
    background rgba(0, 0, 0, 0.5)

  .left
    width 50px
    height calc(100% - 30px)
    position absolute
    left 0
    top 0
    background rgba(0, 0, 0, 0)
    margin-top $cameraPadding
    margin-right $cameraPadding


  .right
    width 50px
    height calc(100% - 30px)
    position absolute
    right 0
    top 0
    background rgba(0,0,0,0)
    margin-top $cameraPadding
    margin-right $cameraPadding


  .top
    width calc(100% - 30px)
    position absolute
    height 50px
    top 0
    background: rgba(0,0,0,0)
    margin-top $cameraPadding
    margin-right $cameraPadding


  .bottom
    width calc(100% - 30px)
    position absolute
    height 50px
    bottom 0
    background: rgba(0,0,0,0)
    margin-top $cameraPadding
    margin-right $cameraPadding
