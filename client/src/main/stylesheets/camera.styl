$cameraPadding = 30px
$bootstrapSidePadding = 15px
.camera
  padding-top $cameraPadding
  .cameraThumbnail
    width 100%
    height 100%
    cursor pointer

  .cameraImage
    width 100%
    height 100%

  .cameraControls
    width 100%
    height 100%
    position relative
    top -480px
    // left $bootstrapSidePadding
    padding-top $cameraPadding

  .left:hover, .right:hover, .top:hover, .bottom:hover
    background rgba(0, 0, 0, 0.5)

  .left
    width 50px
    height 100%
    position absolute
    left 0
    top 0
    background rgba(0, 0, 0, 0)
    // margin-top $cameraPadding
    // margin-right $cameraPadding


  .right
    width 50px
    height 100%
    position absolute
    right 0
    top 0
    background rgba(0,0,0,0)
    // margin-top $cameraPadding
    // margin-right $cameraPadding


  .top
    width 100%
    position absolute
    height 50px
    top 0
    background: rgba(0,0,0,0)
    // margin-top $cameraPadding
    // margin-right $cameraPadding


  .bottom
    width 100%
    position absolute
    height 50px
    bottom 0
    background: rgba(0,0,0,0)
