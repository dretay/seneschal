$cameraPadding = 30px
$bootstrapSidePadding = 15px
.securityCamera
  appliance-style("/stylesheets/img/security_camera.svg")
.camera
  padding-top $cameraPadding
  text-align center
  vertical-align middle
  .cameraThumbnail
    width 100%
    height 100%
    cursor pointer

  .cameraImage
    width 100%
    height 100%

  .cameraWrapper
    width: 80%;
    display: inline-block;
    position: relative;
  .cameraWrapper:after
    padding-top: 75%
    display: block;
    content: '';

  .cameraContent
    position: absolute;
    top: 0; bottom: 0; right: 0; left: 0;
    background-color: rgb(0, 140, 200);

  .cameraControls
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    // left $bootstrapSidePadding

  .left:hover, .right:hover, .top:hover, .bottom:hover
    background rgba(0, 0, 0, 0.5)

  .left
    width 50px
    height 100%
    position absolute
    left 0
    top 0
    background rgba(0, 0, 0, 0)
    // margin-top $cameraPadding
    // margin-right $cameraPadding


  .right
    width 50px
    height 100%
    position absolute
    right 0
    top 0
    background rgba(0,0,0,0)
    // margin-top $cameraPadding
    // margin-right $cameraPadding


  .top
    width 100%
    position absolute
    height 50px
    top 0
    background: rgba(0,0,0,0)
    // margin-top $cameraPadding
    // margin-right $cameraPadding


  .bottom
    width 100%
    position absolute
    height 50px
    bottom 0
    background: rgba(0,0,0,0)
    // margin-top $cameraPadding
    // margin-right $cameraPadding
