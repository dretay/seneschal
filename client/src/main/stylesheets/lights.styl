.floorplan
  //background #2c3e50
  color white
  img
    width 100%
    height 100%
    max-height calc(100% - 7em)
    padding-top 1em

  .lightOverlay
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    max-height calc(100% - 7em)


.alarmStatus
  position absolute
  left 90%
  bottom 10px
  background white
.alarmStatus-red
    color red
.alarmStatus-green
    color green
.alarmStatus-grey
    color grey
.alarmBorder
  padding 10px
.alarmBorder-red
    border 10px solid red
.alarmBorder-green
    border 10px solid green
.alarmBorder-grey
    border 10px dashed grey



.lightFloorRow
  padding-bottom  10px
  .selected
    text-decoration underline

.alarmDisplayLine
  font-family digital-7, Serif
