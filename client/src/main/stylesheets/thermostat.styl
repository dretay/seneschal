.thermostat
  .frame-face
    position:relative;
    width:30em;
    height:30em;
    margin:2em auto;
    border-radius:15em;
    background:-webkit-linear-gradient(top, #f9f9f9,#666);
    background:-moz-linear-gradient(top, #f9f9f9,#666);
    background:linear-gradient(to bottom, #f9f9f9,#666);
    box-shadow:rgba(0,0,0,.8) .5em .5em 4em;

  .frame-face:before
    content:'';
    width:29.4em;
    height:29.4em;
    border-radius:14.7em;
    position:absolute;
    top:.3em; left:.3em;
    background:
      -webkit-linear-gradient(135deg, rgba(246,248,249,0) 0%,rgba(229,235,238,1) 50%,rgba(205,212,217,1) 51%,rgba(245,247,249,0) 100%),
      -webkit-radial-gradient(center, ellipse cover, rgba(246,248,249,1) 0%,rgba(229,235,238,1) 65%,rgba(205,212,217,1) 66%,rgba(245,247,249,1) 100%);
    background:
      -moz-linear-gradient(135deg, rgba(246,248,249,0) 0%,rgba(229,235,238,1) 50%,rgba(205,212,217,1) 51%,rgba(245,247,249,0) 100%),
      -moz-radial-gradient(center, ellipse cover, rgba(246,248,249,1) 0%,rgba(229,235,238,1) 65%,rgba(205,212,217,1) 66%,rgba(245,247,249,1) 100%);
    background:
      linear-gradient(135deg, rgba(246,248,249,0) 0%,rgba(229,235,238,1) 50%,rgba(205,212,217,1) 51%,rgba(245,247,249,0) 100%),
      radial-gradient(ellipse at center, rgba(246,248,249,1) 0%,rgba(229,235,238,1) 65%,rgba(205,212,217,1) 66%,rgba(245,247,249,1) 100%);

  .frame-face:after
    content:'';
    width:28em;
    height:28em;
    border-radius:14.2em;
    position:absolute;
    top:.9em; left:.9em;
    box-shadow:inset rgba(0,0,0,.2) .2em .2em 1em;
    border:.1em solid rgba(0,0,0,.2);
    background:-webkit-linear-gradient(top, #fff, #ccc);
    background:-moz-linear-gradient(top, #fff, #ccc);
    background:linear-gradient(to bottom, #fff, #ccc);
  .color-circle-heat
    background-image: -moz-linear-gradient(45deg, #871F0B 0%, #E45A0D 100%);
    background-image: -o-linear-gradient(45deg, #871F0B 0%, #E45A0D 100%);
    background-image: -webkit-linear-gradient(45deg, #871F0B 0%, #E45A0D 100%);
    background-image: linear-gradient(45deg, #871F0B 0%, #E45A0D 100%);

  .color-circle-cool
    background-image: -moz-linear-gradient(45deg, #0b1c87 0%, #0dd7e4 100%);
    background-image: -o-linear-gradient(45deg, #0b1c87 0%, #0dd7e4 100%);
    background-image: -webkit-linear-gradient(45deg, #0b1c87 0%, #0dd7e4 100%);
    background-image: linear-gradient(45deg, #0b1c87 0%, #0dd7e4 100%);

  .color-circle
    position: absolute;
    top: 50px;
    margin-left: 52px;
    z-index: 2;
    width: 320px;
    height: 320px;
    -moz-border-radius: 153px;
    -webkit-border-radius: 153px;
    border-radius: 153px;
    -moz-background-clip: padding;
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
    background-color: #f5f5f5;
    -moz-box-shadow: inset 0 0 10px rgba(0,0,0,.36), 0 0 0 1px #969696;
    -webkit-box-shadow: inset 0 0 10px rgba(0,0,0,.36), 0 0 0 1px #969696;
    box-shadow: inset 0 0 10px rgba(0,0,0,.36), 0 0 0 1px #969696;

  .text-readout
    color: #f5f5f5;
    text-shadow: 0 2px 4px rgba(3,4,4,.55);
    font-size: 12em;
    font-family: "Myriad Pro Regular",sans-serif;
    font-weight: 700;

    position:relative;
    top:-58px;
    /*left:116px;*/
    /*margin-left: 115px;*/
    z-index:4;
    text-align: center;

  .thermostatControlTop
    cursor: pointer;
    position: relative;
    top: 0;
    font-weight: 100;
    z-index: 1;
    /*display: block;*/

  .thermostatControlBottom
    cursor: pointer;
    position: relative;
    bottom: 260px;
    font-weight: 100;
    z-index: 1;

    /*display: block;*/

