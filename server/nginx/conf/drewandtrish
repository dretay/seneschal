  server {
		listen       443;
		server_name  www.drewandtrish.com;
		#add_header Strict-Transport-Security max-age=2592000;
		ssl on;
		ssl_certificate /etc/pki/ssl-unified.crt;
		ssl_certificate_key /etc/pki/www.drewandtrish.com.key;

		ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
		ssl_ciphers ECDHE-RSA-AES256-SHA384:AES256-SHA256:RC4:HIGH:!MD5:!aNULL:!eNULL:!NULL:!DH:!EDH:!AESGCM;
		ssl_prefer_server_ciphers on;
		ssl_session_cache shared:SSL:10m;
		ssl_session_timeout 10m;


		location / {
			root /home/pi/dev/seneschal/client/build/resources/main;
		}
		location /vmstats {
			proxy_pass http://192.168.1.2:9090;
      # WebSocket support (nginx 1.4)
      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection "upgrade";
			access_by_lua '
          --get request arguments
          local args = ngx.req.get_uri_args()

          --grab token and remove from args table
          local token = ngx.decode_base64(args["token"])
          args["token"] = nil

          --decrypt token and build username / password
          local aes = require "resty.aes"
          local str = require "resty.string"
          local split = require "utils"
          local aes_256_cbc_sha512x5 = aes:new("AKeyForAES-256-CBC", "145a2f0e39c6d84c58ccba257dd43908", aes.cipher(256,"cbc"), aes.hash.sha512, 1000)

          local decrypted = JSON:decode(aes_256_cbc_sha512x5:decrypt(token))
          if string.len(decrypted.foscam) > 0 then
            return
          else
            ngx.exit(ngx.HTTP_FORBIDDEN)
          end
      ';
      rewrite ^.* / break;
		}
#location /generateCredentials {
#default_type 'text/plain';
#content_by_lua_file  /opt/nginx/lua/getCredentials.lua;
#}
		location /getRabbitCredentials {
			add_header Access-Control-Allow-Origin "*";
			default_type 'text/plain';
			content_by_lua_file  /usr/local/openresty/nginx/lua/getRabbitCredentials.lua;
		}
		location /rabbitmq{
			access_log off;
			proxy_pass http://localhost:55674;
			proxy_set_header X-Real-IP $remote_addr;
			proxy_set_header Host $host;
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

			# WebSocket support (nginx 1.4)
			proxy_http_version 1.1;
			proxy_set_header Upgrade $http_upgrade;
			proxy_set_header Connection "upgrade";

			rewrite ^/rabbitmq/(.+) /$1 break;
			proxy_redirect off;
		}
		location /cameras {
			add_header Access-Control-Allow-Origin *;
      proxy_redirect off;
      rewrite_by_lua_file  /usr/local/openresty/nginx/lua/foscam.lua;
      rewrite ^/cameras/(.+)/(.+)/(.*) /$3 break;
      proxy_set_header        Accept-Encoding   "";
      proxy_set_header        Host            $host;
      proxy_set_header        X-Real-IP       $remote_addr;
      proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_pass http://$1:$2;
		}
		location /proxiedCameras {
			add_header Access-Control-Allow-Origin *;
      proxy_redirect off;
      rewrite_by_lua_file  /usr/local/openresty/nginx/lua/proxiedFoscam.lua;
      rewrite ^/proxiedCameras/(.+)/(.+)/(.*) /$3 break;
      proxy_set_header        Accept-Encoding   "";
      proxy_set_header        Host            $host;
      proxy_set_header        X-Real-IP       $remote_addr;
      proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_pass http://$1:$2;
		}

	}
